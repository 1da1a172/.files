# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 1
}

order += "ipv6"
order += "wireless wlp3s0"
order += "ethernet enp13s0"
order += "ethernet enp0s20u1"
order += "ethernet enp0s20u2"
order += "ethernet usb0"
order += "disk /"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless wlp3s0 {
    format_up = "%essid: %ip (%frequency | %signal | %bitrate)"
    format_down = ""
}

ethernet enp13s0 {
    # if you use %speed, i3status requires root privileges
    format_up = "D: %ip (%speed)"
    format_down = ""
}

ethernet enp0s20u1 {
    format_up = "U₁: %ip"
    format_down = ""
}

ethernet enp0s20u2 {
    format_up = "U₂: %ip"
    format_down = ""
}

ethernet usb0 {
    format_up = "U: %ip"
    format_down = ""
}

battery 0 {
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    hide_seconds = true
    status_bat = '⎓'
    status_chr = '⏦'
    status_full = '⚡'
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "%1min"
}

disk "/" {
    format = "%avail"
}

volume master {
	format = "𝅘𝅥𝅮: %volume"
	format_muted = "𝄽: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
