#
# Color definition
#

set $hard   '#1d2021'
set $medium '#282828'
set $soft   '#32302f'

set $black   '#282828'
set $red     '#cc241d'
set $green   '#98971a'
set $yellow  '#d79921'
set $blue    '#458588'
set $magenta '#b16286'
set $cyan    '#689d6a'
set $white   '#a89984'

set $bright_black   '#928374'
set $bright_red     '#fb4934'
set $bright_green   '#b8bb26'
set $bright_yellow  '#fabd2f'
set $bright_blue    '#83a598'
set $bright_magenta '#d3869b'
set $bright_cyan    '#8ec07c'
set $bright_white   '#ebdbb2'

set $focused_background $yellow
set $focused_border     $yellow
set $focused_text       $black
set $focused_indicator  $green

set $inactive_background $medium
set $inactive_border     $white
set $inactive_text       $yellow
set $inactive_indicator  $green

set $unfocused_background $hard
set $unfocused_border     $soft
set $unfocused_text       $yellow
set $unfocused_indicator  $blue

set $urgent_background $red
set $urgent_border     $red
set $urgent_text       $bright_yellow
set $urgent_indicator  $red

#
# Appearance:
#

client.focused          $focused_border    $focused_background   $focused_text   $focused_indicator   $focused_border
client.focused_inactive $inactive_border   $inactive_background  $inactive_text  $inactive_indicator  $inactive_border
client.unfocused        $unfocused_border  $unfocused_background $unfocused_text $unfocused_indicator $unfocused_border
client.urgent           $urgent_border     $urgent_background    $urgent_text    $urgent_indicator    $urgent_border
