# Read `man 5 sway` for a complete reference.

### Imports
include gpg
include gruvbox
include firefox
include zoom.us

### Variables
#
# Outputs
set $edp 'Sharp Corporation 0x1476 0x00000000'
set $deskh 'Dell Inc. DELL P2715Q X24K1737773L'
set $deskv 'Dell Inc. DELL P2415Q G3D7F8BM03LB'
set $hdmi HDMI-A-1

# Mod keys
set $mod Mod1
set $modp Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Default apps
set $term term-new
set $menu dmenu_path | dmenu | xargs swaymsg exec --

### Window decoration
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders --i3 smart

### Output configuration
#
# man 5 sway-output
# Monitor setup
output $edp position 0,2160 scale 1
output $deskh position 0,1680 scale 1
output $deskh mode 3840x2160
output $deskv position 3840,0 transform 270 scale 1
output $deskv mode 3840x2160
# backround
output * bg '#000000' solid_color

### Input configuration
#
# man 5 sway-input
# Keyboard
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_options caps:escape
}
input "1133:8208:Logitech_K800" {
    xkb_options caps:escape
}
# Touchpad / mouse
input "1739:31251:DLL07BF:01_06CB:7A13_Touchpad" {
    tap enabled
    dwt enabled
    tap_button_map lmr
}
seat * hide_cursor 5000

### Key bindings
#
# Basics:
#
# Launching stuff
    # terminal
    bindsym $mod+Return exec $term
    bindsym $mod+Shift+Return exec term-attach
    bindsym Ctrl+$mod+Return exec term-app

    # personal browser
    bindsym $mod+space exec firefox

    # lock screen
    bindsym Ctrl+$mod+l exec swaylock -e -c 303030

    # password manager
    bindsym $mod+p exec passway

    # MAC stuff
    bindsym $mod+m exec mac-formats
    bindsym $mod+Shift+m exec mymac

    # Screenshot
    bindsym Print exec grim-bemenu

    # Adjust brightness
    bindsym XF86MonBrightnessUp exec bl max
    bindsym XF86MonBrightnessDown exec bl min

# dragging windows
    floating_modifier $mod normal

# Notification control
    bindsym Ctrl+space exec makoctl dismiss
    bindsym Ctrl+Shift+space exec makoctl dismiss -a

# other
    # kill focused window
    bindsym $mod+Shift+q kill

    # start your launcher
    bindsym $mod+d exec $menu

    # reload the configuration file
    bindsym $mod+Shift+c reload
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # _move_ the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

    # move the focused _worksapce_ with the same, but add Ctrl
    bindsym $mod+Ctrl+Shift+$left move workspace to output left
    bindsym $mod+Ctrl+Shift+$right move workspace to output right
    bindsym $mod+Ctrl+Shift+$up move workspace to output up
    bindsym $mod+Ctrl+Shift+$down move workspace to output down
    # ditto, with arrow keys
    bindsym $mod+Ctrl+Shift+Left move workspace to output left
    bindsym $mod+Ctrl+Shift+Right move workspace to output right
    bindsym $mod+Ctrl+Shift+Up move workspace to output up
    bindsym $mod+Ctrl+Shift+Down move workspace to output down

#
# Workspaces:
#
    # switch to workspace
    bindsym $mod+0 workspace 0
    bindsym $mod+1 workspace 1
    bindsym $mod+2 workspace 2
    bindsym $mod+3 workspace 3
    bindsym $mod+4 workspace 4
    bindsym $mod+5 workspace 5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8
    bindsym $mod+9 workspace 9
    bindsym $modp+0 workspace 10
    bindsym $modp+1 workspace 11
    bindsym $modp+2 workspace 12
    bindsym $modp+3 workspace 13
    bindsym $modp+4 workspace 14
    bindsym $modp+5 workspace 15
    bindsym $modp+6 workspace 16
    bindsym $modp+7 workspace 17
    bindsym $modp+8 workspace 18
    bindsym $modp+9 workspace 19
    # move focused container to workspace
    bindsym $mod+Shift+0 move container to workspace 0
    bindsym $mod+Shift+1 move container to workspace 1
    bindsym $mod+Shift+2 move container to workspace 2
    bindsym $mod+Shift+3 move container to workspace 3
    bindsym $mod+Shift+4 move container to workspace 4
    bindsym $mod+Shift+5 move container to workspace 5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8
    bindsym $mod+Shift+9 move container to workspace 9
    bindsym $modp+Shift+0 move container to workspace 10
    bindsym $modp+Shift+1 move container to workspace 11
    bindsym $modp+Shift+2 move container to workspace 12
    bindsym $modp+Shift+3 move container to workspace 13
    bindsym $modp+Shift+4 move container to workspace 14
    bindsym $modp+Shift+5 move container to workspace 15
    bindsym $modp+Shift+6 move container to workspace 16
    bindsym $modp+Shift+7 move container to workspace 17
    bindsym $modp+Shift+8 move container to workspace 18
    bindsym $modp+Shift+9 move container to workspace 19
    # bind workspace to expected output
    workspace 0 output $deskh $edp
    workspace 1 output $deskh $edp
    workspace 2 output $deskh $edp
    workspace 3 output $deskh $edp
    workspace 4 output $deskh $edp
    workspace 5 output $deskh $edp
    workspace 6 output $deskh $edp
    workspace 7 output $deskh $edp
    workspace 8 output $deskh $edp
    workspace 9 output $deskh $edp
    workspace 10 output $deskv $hdmi $edp
    workspace 11 output $deskv $hdmi $edp
    workspace 12 output $deskv $hdmi $edp
    workspace 13 output $deskv $hdmi $edp
    workspace 14 output $deskv $hdmi $edp
    workspace 15 output $deskv $hdmi $edp
    workspace 16 output $deskv $hdmi $edp
    workspace 17 output $deskv $hdmi $edp
    workspace 18 output $deskv $hdmi $edp
    workspace 19 output $deskv $hdmi $edp
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+x floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+x focus mode_toggle

    # move focus to the parent container
    bindsym $mod+a focus parent
    bindsym $mod+z focus child
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    # ditto, with arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position bottom
    status_command i3status
    colors {
        statusline $bright_white
        background $hard
        focused_workspace  $focused_border  $focused_background  $focused_text
        active_workspace $inactive_border $inactive_background $inactive_text
        inactive_workspace $unfocused_border $unfocused_background $unfocused_text
    }
}

include /etc/sway/config.d/*
