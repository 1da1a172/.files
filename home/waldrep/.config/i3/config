# Set mod and mod prime
set $mod mod1
set $modp mod4

#Set internal/external display
set $id eDP1
set $ed HDMI1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Linux Libertine 11

# Startup commands
exec --no-startup-id xsetroot -solid black

# Tweak the window/border decorations
new_window pixel 1
new_float pixel 1
bindsym $mod+i border pixel 1
bindsym $mod+Shift+i border normal

# Fix for non-floaty windows that should be
## gpg 'insert card x' window
for_window [class="Pinentry" instance="pinentry"] floating enable

# Fix for floaty windows that should tile
## chromium apps (notably hangouts)
for_window [window_role="app" class="Chromium"] floating disable

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+Return exec st-attach
bindsym Ctrl+$mod+Return exec st-app

# start a browser
bindsym $mod+space exec /usr/bin/chromium --profile-directory='Profile 1'
bindsym $mod+Shift+space exec /usr/bin/chromium --profile-directory='Profile 2'

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu for chrome apps
bindsym $mod+c exec chrome-dmenu 'Profile 1'
bindsym $mod+Shift+c exec chrome-dmenu 'Default'

# start dmenu
bindsym $mod+d exec dmenu_run
bindsym $mod+Shift+d exec sbin-dmenu

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# ... with cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# ... with cursor keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation (portrait)
bindsym $mod+p split h

# split in vertical orientation (landscape)
bindsym $mod+o split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+x floating toggle

# change focus between tiling / floating windows
bindsym $mod+x focus mode_toggle

# Scratchpad
bindsym $modp+s move scratchpad
bindsym $modp+d scratchpad show

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

# bind workspace to screen
workspace 1 output $ed
workspace 2 output $ed
workspace 3 output $ed
workspace 4 output $ed
workspace 5 output $ed
workspace 6 output $ed
workspace 7 output $ed
workspace 8 output $ed
workspace 9 output $ed
workspace 10 output $ed
workspace 11 output $id
workspace 12 output $id
workspace 13 output $id
workspace 14 output $id
workspace 15 output $id
workspace 16 output $id
workspace 17 output $id
workspace 18 output $id
workspace 19 output $id
workspace 20 output $id

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $modp+1 workspace number 11
bindsym $modp+2 workspace number 12
bindsym $modp+3 workspace number 13
bindsym $modp+4 workspace number 14
bindsym $modp+5 workspace number 15
bindsym $modp+6 workspace number 16
