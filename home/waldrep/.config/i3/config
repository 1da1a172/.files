# use these keys for focus, movement, and resize directions when reaching for
# the arrow keys is not convenient
set $left h
set $down j
set $up k
set $right l

# Set mod and mod prime
set $mod mod1
set $modp mod4

#Set primary/secondary display
set $disp1 DP1-2
set $disp2 DP2-2
#set $disp1 eDP1
#set $disp2 HDMI1

# Set browser profiles
set $browser 'chromium'
set $spartan074 '--profile-directory=Profile 1'
set $waldrep '--profile-directory=Profile 2'

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Linux Libertine 10

# Startup commands
exec --no-startup-id xsetroot -solid black

# Tweak the window/border decorations
new_window pixel 1
new_float pixel 1

# Fix for non-floaty windows that should be
## gpg 'insert card x' window
for_window [class="Pinentry" instance="pinentry"] floating enable

# Fix for floaty windows that should tile
## chromium apps (notably hangouts)
for_window [window_role="app" class="Chromium"] floating disable

# Keep mpsyt videos in a specific workspace
assign [class="^mpv$"] 20

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+Return exec st-attach
bindsym Ctrl+$mod+Return exec st-app

# start a browser
bindsym $mod+space exec $browser $spartan074
bindsym $modp+space exec $browser $waldrep
bindsym $mod+q exec qutebrowser

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu
bindsym $mod+f exec dmenu_run

# passmenu
bindsym $mod+p exec passmenu

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# ... with cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# ... with cursor keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation (portrait)
bindsym $mod+g split h

# split in vertical orientation (landscape)
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+w fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+u layout stacking
bindsym $mod+i layout tabbed
bindsym $mod+o layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+x floating toggle

# change focus between tiling / floating windows
bindsym $mod+x focus mode_toggle

# Scratchpad
bindsym $modp+s move scratchpad
bindsym $modp+d scratchpad show

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

