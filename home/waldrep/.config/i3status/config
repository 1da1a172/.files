# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 1
}

order += "VPN"
order += "ipv6"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

path_exists VPN {
    path = "/sys/devices/virtual/net/tun0"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = ": %ip (%speed)"
    format_down = ""
}

wireless _first_ {
    format_up = "%essid: %ip (%frequency | %signal)"
    format_down = ""
}

battery 0 {
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    hide_seconds = true
    status_bat = ''
    status_chr = ''
    status_full = ''
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "%1min"
}

disk "/" {
    format = "%avail"
}

volume master {
	format = ": %volume"
	format_muted = ": %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
