# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 1
}

order += "ipv6"
order += "wireless wlp1s0"
order += "disk /"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless wlp1s0 {
    format_up = "%essid: %ip (%frequency | %signal | %bitrate)"
    format_down = "W: (down)"
}

battery 0 {
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    hide_seconds = true
    status_bat = '⎓'
    status_chr = '⏦'
    status_full = '⚡'
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "%1min"
}

disk "/" {
    format = "%avail"
}

volume master {
	format = "𝅘𝅥𝅮: %volume"
	format_muted = "𝄽: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
